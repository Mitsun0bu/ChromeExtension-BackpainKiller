{
    "manifest_version": 2,
    "name": "Backpain Killer",
    "version": "1.0",
    "description": "Send a vocal message to remind the user to sit up and prevent backpain !",
    "permissions": [
        "activeTab",
        "webNavigation",
        "tts"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "128": "icon.png"
     },
    "web_accessible_resources": [
        "popup.html",
        "popup.js",
        "stylesheet.css"
     ]
}