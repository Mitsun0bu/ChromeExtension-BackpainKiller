{
    "manifest_version": 3,
    "name": "Backpain Killer",
    "version": "1.0",
    "description": "This extension sends a vocal reminder to the user to sit well on his chair and thus prevents backpain :)",
    "permissions":
    [
        "tts"
    ],
    "background":
    {
        "service_worker"    :   "background.js"
    },
    "action":
    {
        "default_popup"     :   "popup.html"
    },
    "icons":
    {
        "128"               :   "icon.png"
    },
    "content_scripts":
    [
        {
            "matches"       :   ["<all_urls>"],
            "js"            :   ["popup.js"],
            "css"           :   ["stylesheet.css"],
            "run_at"        :   "document_start"
        }
    ],
    "web_accessible_resources":
    [
        {
            "resources"     :   ["popup.html"],
            "matches"       :   ["<all_urls>"]
        }
    ]
}